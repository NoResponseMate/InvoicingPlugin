<h1 class="ui header">
    <i class="circular inbox icon"></i>
    <div class="content">
        {{ 'sylius_invoicing.ui.invoice'|trans }} {{ invoice.number }}
        <div class="sub header">
            <div class="ui horizontal divided list">
                <div class="item">
                    {{ 'sylius_invoicing.ui.issued_at'|trans }}: <span id="invoice-issued-at">{{ invoice.issuedAt|format_datetime }}</span>
                </div>
                <div class="item">
                    {{ 'sylius_invoicing.ui.issued_for_order'|trans }}: #{{ invoice.order.number }}
                </div>
                <div class="item">
                    {{ 'sylius_invoicing.ui.issued_from'|trans }}
                    {% include '@SyliusAdmin/Common/_channel.html.twig' with {'channel': invoice.channel} %}
                </div>
            </div>
        </div>
    </div>
</h1>
